}

table {
  table-layout: fixed;
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
}

th {
  text-align: left;
  font-weight: 400;
  padding: $line-global 0;
}

tr {
  border-top: 1px solid $white;
}

td {
  padding: $line-global 0;
}

