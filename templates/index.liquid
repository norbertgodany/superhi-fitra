{% assign mainProduct = all_products['fitra-activity-band'] %}

<h1>
    {{ mainProduct.title }}
</h1>

<div class="product-images">
    {% for image in mainProduct.images %}
        <div class="single-product-image">
            <img src="{{ image || img_url: 'large' }}" alt="fitra Fitness Tracking Band"/>
        </div>
    {% endfor %}
</div>

<div class="product-info">
    <div class="headline">
        <h2>{{ 'product.copy.headline' | t }}</h2>
    </div>

    <div class="description">
        <h3>{{ 'product.copy.description_headline' | t }}</h3>
        {{ mainProduct.description }}
    </div>

    <div class="details">
        <ul>
            <li>{{ 'product.details_list.item1' | t }}</li>
            <li>{{ 'product.details_list.item2' | t }}</li>
        </ul>
    </div>

    <div class="form-wrapper">
        <form action="/cart/add" enctype="multipart/form-data" id="AddToCartForm" method="post">
            <label for="productSelect">{{ mainProduct.options.first }}</label>
            <select id="productSelect" name="id">
                {% for variant in mainProduct.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }}</option>
                {% endfor %}
            </select>
            <button id="AddToCart" name="add" type="submit">
                {{ 'product.form.submit' | t }}
                <span class="product-price">{{ mainProduct.price | money_without_trailing_zeros }}</span>
            </button>
        </form>
    </div>
</div>
